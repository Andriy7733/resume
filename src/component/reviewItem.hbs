<div class="card p-3">
    {{#each reviewList}}
    <div class="card m-3">
        {{#with this}}
        <div class="p-3">
            {{#with this.title}}
            <div class="p-1">{{userName}}</div>
            <div class="p-1">{{caption}}</div>
            <div class="p-1">{{date}}</div>
            {{/with}}
        </div>
        <hr>
        <div class="p-3">
            {{#with this.reviewBody}}
            <div>
                {{#with seller}}
                <div>{{title}}: {{value}}</div>
                {{/with}}
            </div>
            <div class="my-3">
                {{#with rating}}
                <div>{{title}}: {{value}}</div>
                {{/with}}
            </div>
            <div>
                {{#each text}}
                <div>{{this}}</div>
                {{/each}}
            </div>
            <div>
                {{#with advantages}}
                <h6 class="pt-3">{{title}}:</h6>
                <p>{{text}}</p>
                {{/with}}
            </div>
            <div>
                {{#with disadvantages}}
                <h6 class="pt-3">{{title}}:</h6>
                <p>{{text}}</p>
                {{/with}}
            </div>
            <div class="p-1">
                {{#each images}}
                <img src="{{this}}">
                {{/each}}
            </div>
        </div>

    </div>

    {{#each coments}}
    <div class="card m-3 ms-5">
        <div class="p-2">{{userName}}</div>
        <div class="p-2">{{date}}</div>
        <div class="p-2">{{text}}</div>
    </div>
    {{/each}}

    {{/with}}

    {{/with}}

    {{/each}}


</div>