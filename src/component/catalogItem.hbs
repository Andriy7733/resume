{{#each goodsList}}
<div class="col-6">
    <div class="card mt-2 p-2">
        <img src="{{img}}" class="card-img-top">

        <div>
            {{#if isHot}}
            <span class="badge text-bg-warning">Hot</span>
            {{/if}}
            {{#if isNew}}
            <span class="badge text-bg-primary">New</span>
            {{/if}}
        </div>
        <div class="mt-2">
            {{#if isFast}}
            <button type="button" class="btn btn-success btn-sm">Fast</button>
            {{/if}}
        </div>
        <div class="mt-2">
            {{#if isFree}}
            <button type="button" class="btn btn-secondary btn-sm">Free</button>
            {{/if}}
        </div>
        <div class="mt-3">
            <h5 class="card-title">{{name}}</h5>
        </div>
        {{#with review}}
        <div>{{amount}} {{text}}</div>
        {{/with}}

        <div class="my-2">{{price}}</div>
        <div class="my-2">{{delivery}}</div>

        {{#each buttons}}
        <div>
            {{#if isPrimary}}
            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            {{/if}}
        </div>
        <div class="mb-2">
            {{#if isSecondary}}
            <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
            {{/if}}
        </div>
        {{/each}}

        {{#each characteristics}}
        <ul>
            <li>{{title}} {{value}}</li>
        </ul>
        {{/each}}

    </div>
</div>
{{/each}}
</div>