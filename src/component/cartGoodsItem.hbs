{{#each goodsBlock}}
<div class="card my-2">
    <div class="row">
        <div class="col-2 m-3">
            <img src="{{image}}">
        </div>
        <div class="col-4 my-3">
            <h6>{{name}}</h6>
            <p>{{description}}</p>
        </div>
        <div class="col-2 my-5">
            <div>
                {{#with price}}
                <div>{{title}}</div>
                <div>{{value}}</div>
                {{/with}}
            </div>
        </div>
        <div class="col-1 my-5">
            {{amount}}
        </div>
        <div class="col-2 my-3">
            {{#each buttons}}
            <div>
                {{#if isPrimary}}
                <button type="button" class="btn btn-primary">{{text}}</button>
                {{/if}}
            </div>
            <div class="my-2">
                {{#if isDanger}}
                <button type="button" class="btn btn-outline-danger">{{text}}</button>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{/each}}