{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main class="p-5">
    <div class="row">
        {{#with navigation}}

        <div class="col-8">
            <div>{{Logo}}</div>
        </div>

        <div class="col-4">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}

        <hr>

        <div class="col-12">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{/each}}
            </ol>
        </div>

    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                {{#with productData}}
                <img src='{{img}}' class="card-img-top">
            </div>
            <div class="card my-4">
                <div class="card-body">
                    {{#with info}}
                    <div class="card-title">{{title}}</div>
                    <p>{{about}}</p>
                    <div class="display-6">{{price}}</div>


                    {{#each category}}

                    {{#if isHot}}
                    <span class="badge text-bg-warning">{{name}}</span>
                    {{/if}}

                    {{#if isNew}}
                    <span class="badge text-bg-primary">{{name}}</span>
                    {{/if}}

                    {{#if isBonus}}
                    <span class="badge text-bg-info">{{name}}</span>
                    {{/if}}

                    {{/each}}

                    {{/with}}
                </div>
            </div>
            <div>
                {{#each actionList}}

                {{#if isWarning}}
                <button type="button" class="btn btn-warning">{{name}}</button>
                {{/if}}

                {{#if isError}}
                <button type="button" class="btn btn-outline-danger">{{name}}</button>
                {{/if}}

                {{#if isSuccess}}
                <button type="button" class="btn btn-success">{{name}}</button>
                {{/if}}

                {{#if isGood}}
                <button type="button" class="btn btn-outline-success">{{name}}</button>
                {{/if}}

                {{/each}}
            </div>



        </div>


        <div class="col-4 mx-5">
            {{#with item}}
            <table class="table">

                <thead>
                    <tr>
                        {{#each head}}
                        <th>{{this}}</th>
                        {{/each}}
                    </tr>

                </thead>
                <tbody>
                    {{#each body}}
                    <tr>
                        {{#each this}}
                        <td>{{this}}</td>
                        {{/each}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/with}}


            <div class="card my-4">
                <ul class="list-group">
                    {{#with param}}
                    <div class="card-header">{{title}}</div>
                    {{#each list}}
                    <li class="list-group-item">{{this}}</li>
                    {{/each}}

                    {{/with}}
                </ul>
            </div>


            <div class="alert alert-danger">
                {{#with alert}}
                {{#if isError}}
                {{text}}
                {{/if}}
                {{/with}}
            </div>

        </div>

        {{/with}}

    </div>
    <hr>



    {{#with goodsOtherBlock}}
    <div class="display-4 text-center py-5">{{title}}</div>
    <div class="row">
        {{#each cards}}
        <div class="col-4">
            <div class="card">
                <img src="{{image}}" class="card-img-top">
                <div class="card-body">
                    <div class="card-title">
                        {{title}}
                    </div>
                    <p>{{description}}</p>

                    {{#if isHot}}
                    <div class="badge rounded-pill text-bg-warning">HOT</div>
                    {{/if}}

                    {{#if isHot}}
                    <div class="badge rounded-pill text-bg-primary">NEW</div>
                    {{/if}}

                </div>
            </div>

        </div>
        {{/each}}
    </div>
    {{/with}}
    <br>
    <hr>

    <div class="row">
        <div class="col-12">
            {{#with service}}
            <div class="card text-bg-success my-5">
                <div class="card-body text-center">
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <a class="btn btn-primary" href="{{link}}" role="{{rel}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    <hr>


</main>

