{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div class="p-5">
    <div class="row">

        {{#with navigation}}
        <div class="col-8">
            <div>{{Logo}}</div>
        </div>

        <div class="col-4">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}


        {{#with header}}
        <div class="col-9 my-5">
            <h1>{{title}}</h1>
        </div>
        <div class="col-3 my-5">
            {{#with button}}
            <a class="btn btn-outline-secondary" href="{{link}}" role="button">{{text}}</a>
            {{/with}}
        </div>
        {{/with}}
        <hr>

        {{#each goodsBlock}}
        <div class="card my-2">
            <div class="row">
                <div class="col-2 m-3">
                    <img src="{{image}}">
                </div>
                <div class="col-4 my-3">
                    <h6>{{name}}</h6>
                    <p>{{description}}</p>
                </div>
                <div class="col-2 my-5">
                    <div>
                        {{#with price}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                </div>
                <div class="col-1 my-5">
                    {{amount}}
                </div>
                <div class="col-2 my-3">
                    {{#each buttons}}
                    <div>
                        {{#if isPrimary}}
                        <button type="button" class="btn btn-primary">{{text}}</button>
                        {{/if}}
                    </div>
                    <div class="my-2">
                        {{#if isDanger}}
                        <button type="button" class="btn btn-outline-danger">{{text}}</button>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}

        <hr>

        {{#with total}}
        <div class="row">
            <div class="col-8 my-5">
                <h3>{{title}}</h3>
                <div>{{amount}}</div>
                <div>{{delivery}}</div>
            </div>
            <div class="col-4 my-5">
                {{#each buttons}}

                {{#if isSuccess}}
                <div class="my-2">
                    <a type="button" href="{{link}}" class="btn btn-success">{{text}}</a>
                </div>
                {{/if}}

                {{#if isOutline}}
                <a type="button" href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                {{/if}}

                {{/each}}
            </div>

        </div>
        {{/with}}

        <hr>

        {{#with goodsOtherBlock}}
        <div class="text-center display-5 my-3">{{title}}</div>

        <div class="row my-3">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img src="{{image}}" class="card-img-top">
                    <div class="card-body">

                        <div class="card-title">{{title}}
                            {{#if idNew}}
                            <div class="badge rounded-pill text-bg-primary">NEW</div>
                            {{/if}}

                            {{#if isHot}}
                            <div class="badge rounded-pill text-bg-warning">HOT</div>
                            {{/if}}
                        </div>

                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
        <hr>

        {{#with subscribe}}
        <div class="card text-bg-dark my-5">
            <div class="row">
                <div class="col-8 my-3">
                    <h2>{{header}}</h2>
                    <p>{{description}}</p>
                </div>
                <div class="col-4 my-5">
                    {{#each buttons}}
                    <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}

        <hr>


        <footer>
            <div class="nav nav-tabs">
                {{#each footer}}
                <div class="nav-item">
                    {{#each this}}
                    <a href="{{this.link}}" class="nav-link">{{this.text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>


    </div>
</div>

