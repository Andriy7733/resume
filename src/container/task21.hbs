{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div class="p-5">
    <header>
        <section class="card">
            {{#with heading}}
            <div class="card">
                <div class="card-body">
                    {{#with main}}
                    <h1>{{title}}</h1>
                    <p class="text-muted">{{text}}</p>
                    {{#with button_text}}
                    <button type="button" class="btn btn-primary">{{solid}}</button>
                    <br>
                    <br>
                    <button type="button" class="btn btn-outline-primary" disabled>{{outline}}</button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with second}}
                    <h2>{{title}}</h2>
                    <p class="text-muted">{{text}}</p>
                    {{#with button_text}}
                    <button type="button" class="btn btn-secondary">{{solid}}</button>
                    <br>
                    <br>
                    <button type="button" class="btn btn-outline-secondary">{{outline}}</button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with subblock}}
                    <h3>{{title}}</h3>
                    <p class="text-muted">{{text}}</p>
                    {{#with button_text}}
                    <button type="button" class="btn btn-dark">{{solid}}</button>
                    <br>
                    <br>
                    <button type="button" class="btn btn-outline-dark">{{outline}}</button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>

            {{/with}}
        </section>
        <br>
        <section class="card">
            {{#with nested_display}}
            <div class="display-1">{{title}}</div>
            <div class="card">
                <div class="card-body">
                    {{#with children_display}}
                    <div class="display-4">{{title}}</div>
                    <p>{{text}}</p>
                    {{#with button}}
                    <button type="button" class="btn btn-outline-warning">{{text}}</button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>
            <p>{{header_text}}</p>

            <div>
                {{#with button}}
                <button type="button" class="btn btn-info">{{text}}</button>
                {{/with}}
            </div>
            {{/with}}
        </section>
        <br>
        <div class="card">
            {{#with paragraph}}
            <p class="text-uppercase">{{title}}</p>
            <p class="text-lowercase">{{text}}</p>


            <div>
                {{#with button}}
                <a href="{{url}}" class="btn btn-link">
                    {{text}}
                </a>
                {{/with}}
            </div>

            <div class="card">
                <div class="card-body">
                    <ul>

                        {{#each list_name}}
                        <li>
                            <p><a class="btn btn-link" href="{{url}}" role="button">{{text}}</a></p>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            {{/with}}
        </div>
    </header>
</div>

