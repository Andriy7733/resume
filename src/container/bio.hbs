{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
    <div>
        <h1>{{name}}</h1>
    </div>
    <date>{{birthdate}}</date>
    <p>{{birthplace}}</p>
    <date>{{deathdate}}</date>
    <p>{{deathplace}}</p>
    <p>{{nationality}}</p>
    <p>{{occupation}}</p>
    <ul>
        {{#each known_for}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr>
    <div>
        <h2>Education:</h2>
    </div>
    <div>
        {{#each education}}
        <em><b>{{degree}}</b></em>
        <p>{{field}}</p>
        <p>{{institution}}</p>
        <date>{{year}}</date>
        {{/each}}
    </div>
    <hr>
    <div>
        <h3>Notable publications:</h3>
    </div>
    <div>
        <ol>
            {{#each notable_publications}}
            <li>{{title}}</li>
            <date>{{year}}</date>
            <p>{{publisher}}</p>
            {{/each}}
        </ol>
    </div>
    <hr>
    <div>
        <h4>Partners:</h4>
    </div>
    <div>
        <dl>
            {{#each partners}}
            <li>
                <p>{{name}}</p>
            </li>
            <p>{{relationship}}</p>
            <date>{{years}}</date>
            {{/each}}
        </dl>
    </div>
    <hr>
    <div>
        <strong>Awards:</strong>
    </div>
    <div>
        {{#each awards}}
        <p>{{title}}</p>
        <date>{{year}}</date>
        <p>{{description}}</p>
        {{/each}}
    </div>
    <hr>
    <br>
    <div>
        <div>Influences:</div>
    </div>
    <div>
        <ul>
            {{#each influences}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <br>
    <div>
        <div>Influenced:</div>
    </div>
    <div>
        <ul>
            {{#each influenced}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <br>
    <div>
        <div>Quotes:</div>
    </div>
    <div>
        <ul>
            {{#each quotes}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <br>
    <div>
        <strong>Major discoveries</strong>
    </div>
    <div>
        {{#each major_discoveries}}
        <p>{{title}}</p>
        <date>{{year}}</date>
        <p>{{description}}</p>
        {{/each}}
    </div>
    <hr>
    <br>
    <div>
        <article><b>Contributions</b></article>
    </div>
    <br>
    <div>
        {{#with contributions}}
        <div>{{title}}</div>
        <p>{{description}}</p>
        <date>{{year}}</date>
        <p>{{field}}</p>
        {{/with}}
    </div>


</div>


