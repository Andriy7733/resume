{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div class="p-5">

    <body>
        <div class="row">


            {{#with navigation}}
            <div>
                <div class="nav">
                    {{#each links}}
                    <div class="nav-item">
                        <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}


            <nav class="mt-4">
                <ol class="breadcrumb">
                    {{#each breadcrumb}}
                    <li class="breadcrumb-item">
                        <a href="{{url}}">{{name}}</a>
                    </li>
                    {{/each}}
                </ol>
            </nav>

            <header>
                <h1 class="mb-5">{{header}}</h1>
            </header>

            {{#each sortBlock}}
            <div class="col-3">
                <select class="form-select">
                    <option>{{placeholder}}</option>
                    {{#each options}}
                    <option>{{value}} {{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}


            <div class="col-4 mt-5">
                {{#with filterBlock}}

                <div class="card p-2 mt-2">
                    {{#with sellers}}
                    <h6>{{title}}</h6>

                    {{#each list}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">
                            {{value}}
                        </label>
                    </div>
                    {{/each}}

                    {{/with}}
                    <hr>

                    {{#with brands}}
                    <h6>{{title}}</h6>
                    {{#with input}}
                    <div class="mb-3">
                        <input class="form-control" placeholder="{{placeholder}}">
                    </div>
                    {{/with}}
                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">
                            {{value}}
                        </label>
                    </div>
                    {{/each}}
                    {{/with}}
                    <hr>

                    {{#with price}}
                    <h6>{{title}}</h6>

                    {{#with range}}
                    <div>
                        <input class="form-control" placeholder="{{from}}">
                    </div>
                    <div class="mt-2">
                        <input class="form-control" placeholder="{{to}}">
                    </div>
                    {{/with}}
                    {{#with button}}
                    <div class="mt-2">
                        <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                    </div>
                    {{/with}}
                    <hr>

                    {{/with}}


                    {{#each filterList}}
                    <h6 class="mb-2">{{title}}</h6>
                    {{#each options}}
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">
                            {{value}}
                        </label>
                    </div>
                    {{/each}}
                    {{#unless @last}}
                    <hr>
                    {{/unless}}
                    {{/each}}
                </div>


                {{/with}}
            </div>





            <div class="col-8 mt-5">
                <div class="row">
                    {{#each goodsList}}
                    <div class="col-6">
                        <div class="card mt-2 p-2">
                            <img src="{{img}}" class="card-img-top">

                            <div>
                                {{#if isHot}}
                                <span class="badge text-bg-warning">Hot</span>
                                {{/if}}
                                {{#if isNew}}
                                <span class="badge text-bg-primary">New</span>
                                {{/if}}
                            </div>
                            <div class="mt-2">
                                {{#if isFast}}
                                <button type="button" class="btn btn-success btn-sm">Fast</button>
                                {{/if}}
                            </div>
                            <div class="mt-2">
                                {{#if isFree}}
                                <button type="button" class="btn btn-secondary btn-sm">Free</button>
                                {{/if}}
                            </div>
                            <div class="mt-3">
                                <h5 class="card-title">{{name}}</h5>
                            </div>
                            {{#with review}}
                            <div>{{amount}} {{text}}</div>
                            {{/with}}

                            <div class="my-2">{{price}}</div>
                            <div class="my-2">{{delivery}}</div>

                            {{#each buttons}}
                            <div>
                                {{#if isPrimary}}
                                <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                                {{/if}}
                            </div>
                            <div class="mb-2">
                                {{#if isSecondary}}
                                <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}

                            {{#each characteristics}}
                            <ul>
                                <li>{{title}} {{value}}</li>
                            </ul>
                            {{/each}}

                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>


            <section>
                <div class="col-12">
                    {{#with service}}
                    <div class="card text-bg-success my-5">
                        <div class="card-body text-center">
                            <h2>{{title}}</h2>
                            <p>{{description}}</p>
                            {{#each buttons}}
                            <a class="btn btn-primary" href="{{link}}" role="{{rel}}">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </section>

            <footer>
                <div class="nav nav-tabs">
                    {{#each footer}}
                    <div class="nav-item">
                        {{#each this}}
                        <a href="{{this.link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{this.text}}</a>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>

            </footer>

        </div>
    </body>
</div>

