{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main>
    <nav>
        {{#with navigation}}
        {{#each links}}
        <a class="btn btn-link" href="{{href}}" role="button">{{text}}</a>
        {{/each}}
        {{#with button}}
        <a class="btn btn-primary" href="{{href}}" role="button">{{text}}</a>
        {{/with}}
        {{/with}}
    </nav>
    <hr>
    <header>
        {{#with header}}
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        {{#with button}}
        <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
        {{/with}}
        {{/with}}
    </header>

    <hr>
    <br>

    <section>
        {{#with city}}
        <h2>{{title}}</h2>

        <div>
            <div class="row g-5">
                {{#each cards}}

                <div class="col-6">
                    <div class="card">
                        {{#with picture}}
                        <img src="{{src}}" class="card-img-top" alt="{{alt}}">
                        {{/with}}
                        <div class="card-body">
                            <p class="card-title">{{title}}</p>
                            <p>{{description}}</p>
                            {{#with button}}
                            <a class="btn btn-primary" href="{{href}}" role="button">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr>
    <br>

    <section>
        {{#with winner}}
        <h2>{{title}}</h2>

        {{#with table}}
        <table class="table">

            <thead>
                <tr>
                    <th>{{head}}</th>
                </tr>
            </thead>

            <tbody>
                {{#each user}}
                <tr>
                    <th>{{place}}</th>
                    <td>{{name}}</td>
                    <td>{{surname}}</td>
                    <td>{{nickname}}</td>
                </tr>
                {{/each}}
            </tbody>

        </table>
        {{/with}}
        {{/with}}
    </section>

    <hr>
    <br>

    <section>

        {{#with gallery}}
        <h2>{{title}}</h2>
        <br>
        <div class="row">
            {{#each cards}}

            <div class="col-4">
                <div class="card">
                    <div class="card-header">{{name}}</div>

                    {{#each items}}
                    <ul class="list-group">
                        <li class="list-group-item">
                            {{this}}
                        </li>
                    </ul>
                    {{/each}}
                </div>
            </div>

            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>
    <br>

    <section>
        {{#with relaxion}}
        <div class="display-3">{{title}}</div>
        <br>
        <div class="row g-5">
            {{#each cards}}
            <div class="col-6">
                <div class="card text-bg-secondary">
                    <div class="card-header">{{header}}</div>
                    <div class="card-title">{{title}}</div>
                    <div class="card-body">{{description}}</div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>
    <br>

    <section>
        {{#with rest}}

        <div class="row g-5">
            {{#each cards}}
            <div class="col-6">

                <div class="card">
                    <div class="text-center">
                        <div class="card-header">{{header}}</div>
                        <div class="card-title">{{title}}</div>
                        <div class="card-body">{{description}}</div>
                        <section><button type="button" class="btn btn-primary">{{button}}</button></section>
                        <p class="card-footer">{{footer}}</p>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>

        {{/with}}
    </section>


    <hr>
    <br>


    <section>
        {{#with proposition}}
        <div class="display-2">{{title}}</div>
        <br>
        <div>
            <div class="row">
                {{#each card}}
                <div class="col-5">
                    <div class="card text-bg-warning">
                        <div class="card-header">{{header}}</div>
                        <div class="card-title">{{title}}</div>
                        <div class="card-body">{{description}}</div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr>
    <br>

    <section>

        <div>
            {{#with footer}}
            <h5>{{title}}</h5>

            <div class="row g-3">

                {{#each navigation}}
                <div class="col-4">
                    <div class="card">
                        <a class="btn btn-link" href="{{href}}" role="button">{{text}}</a>
                    </div>
                </div>
                {{/each}}

                {{#each socialMedia}}
                <div class="col-4">
                    <div class="card">
                        <a class="btn btn-outline-dark" href="{{link}}" role="button">{{name}}</a>
                    </div>
                </div>
                {{/each}}

                {{#each partners}}
                <div class="col-4">
                    <div class="card">
                        <a class="btn btn-outline-info" href="{{link}}" role="button">{{name}}</a>
                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>

    </section>


</main>

