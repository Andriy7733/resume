{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<body>
    <div class="p-5">
        <header>
            <div class="row">
                <div class="card">
                    {{#with navigation}}

                    <nav class="col-4">
                        <div class="nav">
                            {{#each links}}
                            <div class="nav-item">
                                <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            </div>
                            {{/each}}
                        </div>
                    </nav>
                    {{/with}}
                </div>
            </div>
        </header>




        <section>
            {{#with formBlock}}
            <div class="row">
                <div class="col-8">
                    <header>
                        <h1 class="mt-5">{{header}}</h1>
                    </header>

                    {{#with rating}}
                    <div>{{title}}: {{value}}</div>
                    {{/with}}

                    <div>
                        {{#with actionBlock}}
                        <div class="nav nav-tabs mt-5">
                            {{#each tabs}}
                            <div class="nav-item">
                                <div class="nav-link {{#if isActive}} active {{/if}}">{{text}}
                                </div>
                            </div>
                            {{/each}}

                        </div>

                        <div class="mt-5">
                            <hr>
                        </div>

                        <div class="card my-5 ">
                            {{#with report}}
                            <div class="p-3">
                                <h6>{{title}}</h6>
                                {{#with button}}
                                <a class="btn btn-secondary" href="{{link}}" role="button">{{text}}</a>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        <hr>
                        {{/with}}
                    </div>
                    <div>
                        {{#with feedbackBlock}}

                        <h2 class="my-5">{{title}}</h2>

                        {{#each buttons}}
                        {{#if isWarning}}
                        <a class="btn btn-warning" href="{{link}}" role="button">{{text}}</a>
                        {{/if}}
                        {{#if isSuccess}}
                        <a class="btn btn-success" href="{{link}}" role="button">{{text}}</a>
                        {{/if}}
                        {{#if isDanger}}
                        <a class="btn btn-danger" href="{{link}}" role="button">{{text}}</a>
                        {{/if}}
                        {{/each}}

                        {{/with}}
                    </div>

                </div>

                <div class="col-4 mt-5">
                    {{#with goodsInfo}}
                    <div class="card my-3">
                        <img src="{{photo}}" class="card-img-top p-3">
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                        </div>
                    </div>
                    <div class="card my-3">
                        <div class="card body p-3">
                            <div class="card-text pt-1">{{price}}</div>
                            <div class="pt-1">
                                {{#if inMarket}} Є в наявності {{/if}}
                            </div>
                            {{#each buttons}}
                            <div class="pt-1">
                                {{#if isPrimary}}
                                <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                                {{/if}}
                            </div>
                            <div class="pt-1">
                                {{#if isSecondary}}
                                <a class="btn btn-secondary" href="{{link}}" role="button">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card my-3">
                        {{#with seller}}
                        <div class="card body p-3">
                            <div>{{title}}: {{value}}</div>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>

            </div>
            {{/with}}
        </section>

        <div class="my-5">
            <hr>
        </div>

        <section>
            <div class="row">
                <div class="card p-3">
                    {{#each reviewList}}
                    <div class="card m-3">
                        {{#with this}}
                        <div class="p-3">
                            {{#with this.title}}
                            <div class="p-1">{{userName}}</div>
                            <div class="p-1">{{caption}}</div>
                            <div class="p-1">{{date}}</div>
                            {{/with}}
                        </div>
                        <hr>
                        <div class="p-3">
                            {{#with this.reviewBody}}
                            <div>
                                {{#with seller}}
                                <div>{{title}}: {{value}}</div>
                                {{/with}}
                            </div>
                            <div class="my-3">
                                {{#with rating}}
                                <div>{{title}}: {{value}}</div>
                                {{/with}}
                            </div>
                            <div>
                                {{#each text}}
                                <div>{{this}}</div>
                                {{/each}}
                            </div>
                            <div>
                                {{#with advantages}}
                                <h6 class="pt-3">{{title}}:</h6>
                                <p>{{text}}</p>
                                {{/with}}
                            </div>
                            <div>
                                {{#with disadvantages}}
                                <h6 class="pt-3">{{title}}:</h6>
                                <p>{{text}}</p>
                                {{/with}}
                            </div>
                            <div class="p-1">
                                {{#each images}}
                                <img src="{{this}}">
                                {{/each}}
                            </div>
                        </div>

                    </div>

                    {{#each coments}}
                    <div class="card m-3 ms-5">
                        <div class="p-2">{{userName}}</div>
                        <div class="p-2">{{date}}</div>
                        <div class="p-2">{{text}}</div>
                    </div>
                    {{/each}}

                    {{/with}}

                    {{/with}}

                    {{/each}}


                </div>

                {{#with service}}
                <div class="card text-bg-success my-5">
                    <div class="card-body text-center">
                        <h2>{{title}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <a class="btn btn-primary" href="{{link}}" role="{{rel}}">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
                <hr>

            </div>
        </section>

        <footer>
            <div class="nav nav-tabs">
                {{#each footer}}
                <div class="nav-item">
                    {{#each this}}
                    <a href="{{this.link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{this.text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>

    </div>
</body>


