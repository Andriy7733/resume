{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program}}

    <h1>Excursion:</h1>


    {{#with excursion}}

    <h2>{{name}}</h2>

    {{#with location}}
    <div>{{city}}</div>
    <div>{{country}}</div>
    {{/with}}

    <br>
    <div>{{date}}</div>
    <br>

    <div><b>Program:</b></div>

    <ul>
        {{#each program}}
        <li>
            <p><b>{{name}}</b></p>
            <p>{{type}}</p>
            <p>{{duration}} days</p>

            <br>

            {{#with details}}

            {{#with museum}}

            <div><b>{{name}}</b></div>

            <br>

            {{#with location}}
            <div>{{address}}</div>
            <div>{{city}}</div>
            <div>{{country}}</div>
            {{/with}}

            <br>

            <ul>
                {{#each exhibits}}
                <li>
                    <p>{{name}}</p>
                    <p>{{artist}}</p>
                    <p>{{description}}</p>
                    <p>
                        {{#if audio_guide}}
                        (audio guide)
                        {{/if}}
                    </p>
                </li>
                {{/each}}
            </ul>

            {{/with}}
            <br>
            <ul>
                {{#with guide}}
                <li>{{name}}</li>
                <li>{{language}}</li>
                <li>{{rating}}</li>
                {{/with}}
            </ul>

            {{/with}}


            <p>{{name}}</p>
            <p>{{type}}</p>
            <p>{{duration}}</p>

            {{#with details}}

            {{#with venue}}

            <div>{{name}}</div>

            {{#with location}}
            <div>{{address}}</div>
            <div>{{city}}</div>
            <div>{{country}}</div>
            {{/with}}

            {{/with}}
            <ul>
                {{#each performers}}
                <li>{{name}}</li>
                <li>{{type}}</li>
                {{/each}}
            </ul>

            <ul>
                {{#with guide}}
                <li>{{name}}</li>
                <li>{{language}}</li>
                <li>{{rating}}</li>
                {{/with}}
            </ul>

            {{/with}}
        </li>
        {{/each}}
    </ul>
    {{/with}}

    {{/with}}
</div>

