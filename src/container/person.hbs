{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <main>

        <section>

            <h1>{{name}}</h1>

            <div>


                <div>{{age}} years, {{gender}}</div>
                <br>
                <div>

                    <div><b>Address:</b></div>
                    <div>
                        <address>
                            {{#with address}}
                            <div>{{street}}</div>
                            <div>{{city}}, {{state}} {{zip}}</div>
                            <div>{{country}}</div>
                            {{/with}}
                        </address>
                    </div>
                </div>

                <br>
                <hr>

                <div>
                    <em><b>Education:</b></em>
                </div>
                <br>
                <div>

                    {{#each education}}

                    <div>{{degree}}</div>
                    <div>{{major}}</div>
                    <div>{{university}}</div>
                    <div>{{graduationYear}}</div>

                    {{/each}}

                </div>

                <br>
                <hr>

                <div>
                    <em><b>Work Experience:</b></em>
                </div>
                <br>
                <div>
                    {{#each workExperience}}
                    <div>{{company}}</div>
                    <div>{{title}}</div>
                    <div>{{startDate}}</div>
                    <div>{{endDate}}</div>
                    <div>{{responsibilities}}</div>
                    <div>{{year_founded}}</div>
                    <div>{{industry}}</div>

                    <br>
                    <hr>

                    <div>
                        <em><b>Employees:</b></em>
                    </div>
                    <br>
                    <div>
                        {{#each employees}}
                        <div>{{name}}</div>
                        <div>{{position}}</div>
                        <div>{{department}}</div>

                        <br>
                        <hr>
                        <div>
                            <em><b>Projects:</b></em>
                        </div>

                        <ul>
                            <li>
                                {{#each projects}}
                                <div><em><b>{{name}}</b></em></div>
                                <p>{{description}}</p>
                                <div>{{status}}</div>

                                <br>
                                <div>
                                    <em><b>Teams:</b></em>
                                </div>

                                {{#each teams}}
                                <div>{{team_name}}</div>
                                <div>{{team_leader.name}}</div>
                                <div>{{team_leader.title}}</div>
                                <div>{{team_leader.email}}</div>

                                <br>
                                <div>
                                    <em><b>Team members:</b></em>
                                </div>

                                {{#each team_members}}
                                <div>{{name}}</div>
                                <div>{{title}}</div>
                                <div>{{email}}</div>
                                <div>{{skills}}</div>

                                <br>

                                <div>
                                    <ul>
                                        <li>
                                            {{#each projects}}
                                            <div><em><b>{{name}}</b></em></div>
                                            <p>{{description}}</p>
                                            <div>{{technologies}}</div>

                                            <br>
                                            <div>
                                                <b><em><b>Team members:</b></em></b>
                                            </div>
                                            <div>
                                                {{#each team_members}}
                                                <div>{{name}}</div>
                                                <div>{{title}}</div>

                                                {{/each}}
                                            </div>

                                            {{/each}}
                                        </li>
                                    </ul>

                                </div>

                                {{/each}}

                                {{/each}}

                                {{/each}}
                            </li>
                        </ul>
                        {{/each}}


                    </div>




                    {{/each}}
                </div>

            </div>
        </section>
    </main>
    {{/with}}
</div>

