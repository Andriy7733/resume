{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div class="p-5">

    <div class="row">
        {{#with navigation}}

        <div class="col-8">
            <div>{{Logo}}</div>
        </div>

        <div class="col-4">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}

        <hr>


        <div class="col-12">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{/each}}
            </ol>
        </div>

        <div class="my-5">
            {{#with newsData}}
            <img src="{{photo}}" class="card-img-top">

            {{#with head}}
            <h2 class="my-5">{{heading}}</h2>
            <p>{{description}}</p>
            {{/with}}

            {{#each body}}
            <h4>{{title}}</h4>
            <p>{{text}}</p>
            {{/each}}

            {{/with}}
        </div>

        <hr>

        {{#with newsOtherBlock}}

        <h2 class="text-center">{{title}}</h2>

        {{#each cards}}
        <div class="col-6 my-5">
            <div class="card text-bg-dark">
                <div class="card-body">
                    <div class="card-header">
                        {{title}}

                        {{#if isTop}}
                        <div class="badge rounded-pill text-bg-warning">TOP</div>
                        {{/if}}

                        {{#if idNew}}
                        <div class="badge rounded-pill text-bg-warning">NEW</div>
                        {{/if}}
                    </div>

                    <p>{{description}}</p>

                </div>
            </div>
        </div>
        {{/each}}

        {{/with}}

        <hr>

        {{#with service}}
        <div class="col-12 my-5">

            <div class="card text-bg-success">
                <div class="card-body text-center">
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <a class="btn btn-primary" href="{{link}}" role="{{rel}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>

        </div>
        {{/with}}

        <hr>

        <footer>
            <div class="nav nav-tabs">
                {{#each footer}}
                <div class="nav-item">
                    {{#each this}}
                    <a href="{{this.link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{this.text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>



    </div>
</div>

